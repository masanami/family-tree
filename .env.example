# ===================================
# Family Tree Application
# Environment Variables Example
# ===================================

# Node Environment
NODE_ENV=development

# ===================================
# Database Configuration
# ===================================
DATABASE_URL=postgresql://user:password@localhost:5432/family_tree
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/family_tree_test

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ===================================
# API Configuration  
# ===================================
API_PORT=8000
API_BASE_URL=http://localhost:8000

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# API Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===================================
# Frontend Configuration
# ===================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME="Family Tree"
VITE_APP_VERSION=1.0.0

# ===================================
# Authentication
# ===================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Settings
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# ===================================
# File Upload
# ===================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./uploads

# ===================================
# Email Configuration (Optional)
# ===================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@familytree.com

# ===================================
# Logging
# ===================================
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=./logs

# ===================================
# Security
# ===================================
BCRYPT_ROUNDS=10
ALLOWED_HOSTS=localhost,127.0.0.1

# ===================================
# External Services (Optional)
# ===================================
# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=familytree:

# Sentry (for error monitoring)
SENTRY_DSN=

# ===================================
# Development Tools
# ===================================
# Enable development features
DEV_TOOLS_ENABLED=true

# Seed data
SEED_USER_COUNT=10
SEED_FAMILY_COUNT=5