{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["@playwright/test", "node"]
  },
  "include": [
    "tests/**/*.ts",
    "helpers/**/*.ts",
    "fixtures/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}